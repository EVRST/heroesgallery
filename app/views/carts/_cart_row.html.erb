

  <div class="row">

    <div class="col-xs-8">
      <div class="well">
    	<div class="row">
    		<div class="col-md-5">
          <% unless visual.is_upload %>
    			<%= link_to image_tag(visual.image.url(:medium), class: 'img-rounded'), visual_path(visual) %>
          <% else %>
          <%= link_to image_tag(visual.upload.image.url(:medium), class: 'img-rounded'), visual_path(visual.upload) %>
          <% end %>
