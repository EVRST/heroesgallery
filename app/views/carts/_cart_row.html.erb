

  <div class="row">

    <div class="col-xs-8">
      <div class="well">
    	<div class="row">
    		<div class="col-md-5">
          <% unless visual.is_upload %>
    			<%= link_to image_tag(visual.image.url(:medium), class: 'img-rounded'), visual_path(visual) %>
          <% else %>
          <%= link_to image_tag(visual.upload.image.url(:medium), class: 'img-rounded'), visual_path(visual.upload) %>
          <% end %>
    		</div>
    		<div class="col-md-7">
          <p class="lead">
            <span class="hg_color_link">
              <% unless visual.is_upload %>
                <%= link_to visual.name, visual_path(visual) %>
              <% else %>
                <i><%= link_to t("your_own_visual"), upload_path(visual.upload) %></i>
              <% end %>
            </span>
            <br><small><span class="neutral_link">
            <% unless visual.is_upload %>
            <%= link_to visual.artist.full_name, artist_path(visual.artist) %>
            <% end %>
          </span></small>
          </p>

          <p>
            <strong><%= number_to_currency order_item.price %></strong>
            <br><%= order_item.dimension.whole_name if order_item.dimension %></p>
          <p><%= link_to t("remove"), order_item, { data: { confirm: "#{I18n.t("are_you_sure_remove")} '#{order_item.visual.name}' #{I18n.t("from_your_card")}" }, method: :delete, remote: true, class: "btn btn-danger btn-xs btn-transparent" } %>
          </p>
        </div>
      </div>
    </div>
    </div>

    

</div>