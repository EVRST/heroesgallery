

  <div class="row">

    <div class="col-xs-8">
      <div class="well">
    	<div class="row">
    		<div class="col-md-5">
    			<%= link_to image_tag(visual.image.url(:medium), class: 'img-rounded'), visual_path(visual) %>
    		</div>
    		<div class="col-md-7">
          <p class="lead">
            <span class="hg_color_link"><%= link_to visual.name, visual_path(visual) %></span>
            <br><small><span class="neutral_link"><%= link_to visual.artist.full_name, artist_path(visual.artist) %></span></small>
          </p>

          <p>
            <strong><%= number_to_currency order_item.price %></strong>
            <br><%= order_item.dimension.whole_name if order_item.dimension %></p>
          <p><%= link_to "Supprimer", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.visual.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger btn-xs btn-transparent" } %>
          </p>
        </div>
      </div>
    </div>
    </div>

    

</div>