<div class="row artists">

  <div class="container">

    <div class="row col-md-10 col-md-offset-1">

      <h2 class="page-header text-center">Votre compte</h2>


      <h4 class="alert alert-info text-center">
        Votre compte vous permettra de suivre votre commande
      </h4>

      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
   
           <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, placeholder: "email", class: 'form-control' %>
          </div>
          <div class="form-group">  
            <%= f.password_field :password, placeholder: "mot de passe", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "confirmation mot de passe", class: 'form-control' %>
          </div>
           <%= f.submit t("register"), :class => 'btn btn-primary btn-block' %>
           <%= link_to t("login"), new_user_session_path, class: 'btn btn-primary btn-block btn-transparent' %>
        <% end %>
        </div>
      </div>



    </div>
</div>
</div>
