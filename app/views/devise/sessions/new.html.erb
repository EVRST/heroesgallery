<div class="row upload">

  <div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h2 class="page-header text-center">Connexion</h2>
    <%= devise_error_messages! %>
    <div class="form-group">
      <!--<%- if devise_mapping.registerable? %>
        <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>-->
      
      <%= f.email_field :email, label: false, placeholder: "email", :autofocus => true, class: 'form-control input-lg' %>
    </div>
    <div class="form-group">
      <!--<%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
      <% end -%>-->
      
      <%= f.password_field :password, label: false, placeholder: "mot de passe", class: 'form-control input-lg' %>
    </div>
      <%= f.submit 'Se connecter', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end -%>
  <% end %>
</div>

</div>
