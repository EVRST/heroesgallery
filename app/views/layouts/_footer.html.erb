<div class="row footer">
	<div class="container text-center">
		<div class="row subscription">
			<div class="col-md-7 subscription-text">
			<p><%= t("subscribe_to_newsletter") %></p>
			</div>
			<div class="col-md-5">
				<%= simple_form_for(@subscription) do |f| %>
						  <%= f.error_notification %>
						    <div class="input-group">
						    	<div class="subscribe-field">
						      <%= f.text_field :email, placeholder: "email", class: 'form-control' %>
						  </div>
						      <span class="input-group-btn">
						        <%= f.submit t("subscribe"), class: "btn btn-primary btn-subscribe" %>
						      </span>
						    </div><!-- /input-group -->

						  
						<% end %>
			</div> 
		</div>
		<div class="row">
			<div class="col-md-3">
				<%= image_tag "logo.png" %>
			</div>
			<div class="col-md-6 text-center">
				
				<p class="lead">
					<%= link_to t("contact"), contact_path %> 
					
						<span class="fa-stack fa-small">
						  <i class="fa fa-circle fa-stack-2x hg_blue"></i>
						  <i class="fa fa-circle fa-stack-1x fa-inverse"></i>
						</span>
					<%= link_to t("concept"), concept_path %> 
					<span class="fa-stack fa-small">
						  <i class="fa fa-circle fa-stack-2x hg_blue"></i>
						  <i class="fa fa-circle fa-stack-1x fa-inverse"></i>
						</span>
					<%= link_to t("terms"), terms_path %></p>

				<p class="lead">
					<%= link_to "http://www.facebook.com/HeroesGallery" do %>
						<%= content_tag(:i, "", class: "fa fa-facebook") %>
					<% end %>
					<!--<%= link_to "" do %>
						<%= content_tag(:i, "", class: "fa fa-twitter") %>
					<% end %>
					<%= link_to "" do %>
						<%= content_tag(:i, "", class: "fa fa-pinterest") %>
					<% end %>-->
					<%= link_to "mailto:Michel.c.desmit@heroes-gallery.com" do %>
						<%= content_tag(:i, "", class: "fa fa-envelope") %>
					<% end %> 
					</p>

				<p><small>Heroes Gallery 2016 - All rights reserved</small></p>
			</div>
			
			<div class="col-md-3">
				<p class="lead text-center"><%= t("easy_payment") %>
				<!--via <br><i class="fa fa-cc-stripe fa-2x hg_color"></i>-->
				<br>
				<i class="fa fa-cc-visa fa-2x hg_color"></i>
				<i class="fa fa-cc-mastercard fa-2x hg_color"></i>
				<i class="fa fa-cc-amex fa-2x hg_color"></i></p>
			</div>
		</div>

	</div>
</div>