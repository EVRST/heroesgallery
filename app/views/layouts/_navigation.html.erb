<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("logo.png", size: "111x51"), root_path %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
        <%= render 'layouts/nav_links_for_auth' %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        
        <% if I18n.locale.to_s.include?("fr") %>
         <li><%= link_to "NL", url_for(:locale => 'nl') %></li>
         <li><%= link_to "EN", url_for(:locale => 'en') %></li>
        
        <% elsif I18n.locale.to_s.include?("nl") %>

         <li><%= link_to "FR", url_for(:locale => 'fr') %></li>
         <li><%= link_to "EN", url_for(:locale => 'en') %></li>

        <% elsif I18n.locale.to_s.include?("en") %>

          <li><%= link_to "NL", url_for(:locale => 'nl') %></li>
          <li><%= link_to "FR", url_for(:locale => 'fr') %></li>

        <% end %>
    
      </ul>
    </div>
  </div>
</nav>
