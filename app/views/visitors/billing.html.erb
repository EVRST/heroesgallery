<div class="row artists">

  <div class="container">

    <div class="row col-md-10 col-md-offset-1">

    	<h2 class="page-header text-center"><%= t("your_billing_data") %></h2>


    	<h4 class="alert alert-info text-center">
    		<%= t("your_billing_address") %>
    	</h4>

    	<div class="col-md-6 col-md-offset-3">
    		<div class="well">
    			<%= simple_form_for(current_user) do |f| %>
  					<%= f.error_notification %>
   
   				 <%= devise_error_messages! %>

			    <div class="form-group">
			      <%= f.text_field :billing_street, placeholder: t("street"), class: 'form-control' %>
			    </div>
			    <div class="form-group">  
			      <%= f.text_field :billing_number, placeholder: t("street_number"), class: 'form-control' %>
			    </div>
			    <div class="form-group">
			    	<div class="row">
			    		<div class="col-md-4">
			    			<%= f.text_field :billing_zipcode, placeholder: t("zipcode"), class: 'form-control' %>
			    		</div>
			    		<div class="col-md-8">
			    			<%= f.text_field :billing_city, placeholder: t("city"), class: 'form-control' %>
			    		</div>
			    	</div>
			    </div>
			    <div class="form-group">  
			      <%= f.text_field :billing_telephone, placeholder: t("phone"), class: 'form-control' %>
			    </div>
			     <%= f.submit t('confirm'), :class => 'btn btn-primary btn-block' %>
			  <% end %>
    		</div>
    	</div>



    </div>
</div>
</div>