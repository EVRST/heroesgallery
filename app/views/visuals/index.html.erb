<p id="notice"><%= notice %></p>

<h1>Listing Visuals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Artist</th>
      <th>Is drawing</th>
      <th>Is picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visuals.each do |visual| %>
      <tr>
        <td><%= visual.name %></td>
        <td><%= visual.price %></td>
        <td><%= visual.artist_id %></td>
        <td><%= visual.is_drawing %></td>
        <td><%= visual.is_picture %></td>
        <td><%= link_to 'Show', visual %></td>
        <td><%= link_to 'Edit', edit_visual_path(visual) %></td>
        <td><%= link_to 'Destroy', visual, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

